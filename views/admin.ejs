<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <aside>
      <button id="usersBtn">Users</button>
      <button id="productsBtn">Products</button>
    </aside>

    <main>
      <!-- USERS SECTION -->
      <section id="users-section" class="admin-section">
        <h2>Registered Users</h2>
        <table>
          <thead>
            <tr><th>Name</th><th>Email</th><th>Action</th></tr>
          </thead>
          <tbody id="users-table">
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <button class="delete-user" data-email="<%= user.email %>">Delete</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>

      <!-- PRODUCTS SECTION -->
      <section id="products-section" class="admin-section" style="display: none;">
        <h2>Product List</h2>
        <button id="addProductBtn">Add Product</button>
        <table>
          <thead>
            <tr><th>Name</th><th>Price</th><th>Description</th><th>Action</th></tr>
          </thead>
          <tbody id="products-table">
            <% products.forEach((product) => { %>
              <tr>
                <td><%= product.name %></td>
                <td>$<%= product.price %></td>
                <td><%= product.description %></td>
                <td>
                  <button class="delete-product" data-name="<%= product.name %>">Delete</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </main>
  </div>

  <!-- MODAL FOR ADDING PRODUCTS -->
  <div id="productModal" class="modal">
    <div class="modal-content">
      <span id="closeModal" class="close">&times;</span>
      <h3>Add New Product</h3>
      <form id="addProductForm" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Product Name" required><br>
        <input type="number" name="price" placeholder="Price" required><br>
        <textarea name="description" placeholder="Description" required></textarea><br>
        <!-- <input type="file" name="image" accept="image/*" required><br> -->
        <button type="submit">Add Product</button>
      </form>
    </div>
  </div>

  <!-- Link to external JS -->
  <script src="/js/admin.js"></script>
</body>
</html>
